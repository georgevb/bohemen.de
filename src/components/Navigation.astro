<nav class="absolute top-0 w-full bg-transparent z-50">
  <div class="container-custom">
    <div class="flex items-center justify-between py-4">
      <!-- Logo/Name -->
      <a href="/" class="font-script text-2xl md:text-3xl text-white hover:text-gray-200 transition-colors">
        Peter van Bohemen
      </a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-8">
        <a href="#about" class="text-sm font-medium text-white hover:text-gray-200 transition-colors uppercase tracking-wider">
          About
        </a>
        <a href="#portfolio" class="text-sm font-medium text-white hover:text-gray-200 transition-colors uppercase tracking-wider">
          Portfolio
        </a>
        <a href="#contact" class="text-sm font-medium text-white hover:text-gray-200 transition-colors uppercase tracking-wider">
          Contact
        </a>
        <a href="/impressum" class="text-sm font-medium text-white hover:text-gray-200 transition-colors uppercase tracking-wider">
          Legal
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button class="md:hidden p-2" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="py-4 space-y-4">
        <a href="#about" class="block text-sm font-medium text-charcoal hover:text-gray-600 transition-colors uppercase tracking-wider">
          About
        </a>
        <a href="#portfolio" class="block text-sm font-medium text-charcoal hover:text-gray-600 transition-colors uppercase tracking-wider">
          Portfolio
        </a>
        <a href="#contact" class="block text-sm font-medium text-charcoal hover:text-gray-600 transition-colors uppercase tracking-wider">
          Contact
        </a>
        <a href="/impressum" class="block text-sm font-medium text-charcoal hover:text-gray-600 transition-colors uppercase tracking-wider">
          Legal
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>