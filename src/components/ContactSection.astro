---
export interface Props {
  address?: string;
  phone?: string;
  email?: string;
  hours?: string;
}

const {
  address = "Musterstraße 123\n12345 Musterstadt\nDeutschland",
  phone = "+49 123 456789",
  email = "info@petervanbohemen.de",
  hours = "Montag - Freitag: 9:00 - 18:00 Uhr\nSamstag: Nach Vereinbarung\nSonntag: Geschlossen"
} = Astro.props;
---

<section id="contact" class="py-16 md:py-24 bg-charcoal text-white">
  <div class="container-custom">
    <h2 class="text-4xl md:text-5xl font-light text-center mb-12">Kontakt</h2>
    
    <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Contact Information -->
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-medium mb-4">Kontaktinformationen</h3>
          <div class="space-y-4">
            <!-- Address -->
            <div class="flex items-start space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mt-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div class="whitespace-pre-line">{address}</div>
            </div>
            
            <!-- Phone -->
            <div class="flex items-center space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <a href={`tel:${phone.replace(/\s/g, '')}`} class="hover:text-gray-300 transition-colors">
                {phone}
              </a>
            </div>
            
            <!-- Email -->
            <div class="flex items-center space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <a href={`mailto:${email}`} class="hover:text-gray-300 transition-colors">
                {email}
              </a>
            </div>
          </div>
        </div>
        
        <div>
          <h3 class="text-xl font-medium mb-4">Öffnungszeiten</h3>
          <p class="text-gray-300 whitespace-pre-line">
            {hours}
          </p>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div>
        <form 
          name="contact" 
          method="POST" 
          data-netlify="true" 
          data-netlify-honeypot="bot-field"
          class="space-y-4"
        >
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>
              Don't fill this out if you're human: <input name="bot-field" />
            </label>
          </p>
          
          <div>
            <label for="name" class="block text-sm font-medium mb-2">Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="form-input bg-white text-charcoal"
              placeholder="Ihr Name"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium mb-2">E-Mail *</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="form-input bg-white text-charcoal"
              placeholder="ihre.email@beispiel.de"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium mb-2">Telefon</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="form-input bg-white text-charcoal"
              placeholder="+49 123 456789"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium mb-2">Nachricht *</label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="form-input bg-white text-charcoal resize-none"
              placeholder="Ihre Nachricht..."
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full bg-white text-charcoal font-medium py-3 px-6 rounded-md hover:bg-gray-100 transition-colors duration-200"
          >
            Nachricht senden
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<footer class="bg-black text-white py-8">
  <div class="container-custom text-center">
    <p>&copy; {new Date().getFullYear()} Peter van Bohemen Fotografie. Alle Rechte vorbehalten.</p>
    <div class="mt-4 space-x-4 text-sm">
      <a href="/impressum" class="hover:text-gray-300 transition-colors">Impressum</a>
      <a href="/datenschutz" class="hover:text-gray-300 transition-colors">Datenschutz</a>
    </div>
  </div>
</footer>